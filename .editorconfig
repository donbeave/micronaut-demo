root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
end_of_line = lf

[{*.sh,gradlew}]
end_of_line = lf

[{*.bat,*.cmd}]
end_of_line = crlf

[*.java]
indent_size = 4
tab_width = 4
max_line_length = 120

[*.xml]
indent_size = 4

[{*.yml,*.yaml}]
indent_size = 2

[*.json]
indent_size = 2
